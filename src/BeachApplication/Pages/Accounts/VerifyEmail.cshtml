@page

@model VerifyEmailModel

@{
    ViewData["Title"] = "Verify email";
}

<div class="register" x-data="auth">
    <div class="text-center wrapper">
        <form x-on:submit.prevent>
            <div class="col-auto input-box">
                <input type="email" x-model="email" placeholder="Enter your email" />
            </div>
            <div class="col-auto mt-2">
                <button type="submit" x-on:click="verifyEmail()" x-bind:disabled="email.trim().length == 0">Verify</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("alpine:init", () => {
            auth('@Thread.CurrentThread.CurrentCulture.TwoLetterISOLanguageName');
        });
    </script>
}